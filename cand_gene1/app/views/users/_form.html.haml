= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  %table
    %tr
      .field
      %td= f.label :username
      %td= f.text_field :username
    %tr
      .field
      %td= f.label :fullname
      %td= f.text_field :fullname
 
  %br
  .actions
    = f.submit 'Save'
