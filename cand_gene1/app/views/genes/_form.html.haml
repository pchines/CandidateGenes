= form_for @gene do |f|
  -if @gene.errors.any?
    #error_explanation
      %h2= "#{pluralize(@gene.errors.count, "error")} prohibited this gene from being saved:"
      %ul
        - @gene.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :symbol
    = f.text_field :symbol
  .field
    = f.label :long_name
    = f.text_field :long_name
  .field
    = f.label :summary
    = f.text_area :summary
  .field
    = f.label :assigned_to
    = f.number_field :assigned_to
  .actions
    = f.submit 'Save'
