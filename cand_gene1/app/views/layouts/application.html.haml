!!!
%html
  %head
    %title= @project_name
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

%body

  .page_hdr
    %table
      %tr
        %td#project_name= @project_name
        %td#remote_user= "You are logged in as #{@remote_user.fullname}"

  .nav_container
    .nav
      %h2 Gene Safari
      %ul
        %li
          %a{:href => genes_path }  Genes
        %li
          %a{:href => topics_path } Topics
        %li
          %a{:href => users_path }  Users

  .global_content
    = yield
