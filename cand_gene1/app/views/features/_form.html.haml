= form_for @feature do |f|
  -if @feature.errors.any?
    #error_explanation
      %h2= "#{pluralize(@feature.errors.count, "error")} prohibited this feature from being saved:"
      %ul
        - @feature.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :gene_id
    = f.number_field :gene_id
  .field
    = f.label :topic_id
    = f.number_field :topic_id
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :pubmed
    = f.number_field :pubmed
  .field
    = f.label :comment
    = f.text_area :comment
  .field
    = f.label :rating
    = f.number_field :rating
  .actions
    = f.submit 'Save'
